<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/map_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purpleColor"
            android:orientation="vertical">


            <TextView
                android:id="@+id/map_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="@string/begin_text"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:textStyle="italic" />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/begin_button"
                android:src="@drawable/begin"
                android:layout_weight="1"/>
            <!--<Button-->
                <!--android:id="@+id/next_button2"-->
                <!--style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom|right"-->
                <!--android:layout_weight=".75"-->
                <!--android:fontFamily="serif"-->
                <!--android:onClick="instructionActivity"-->
                <!--android:text="@string/next_button"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="20dp" />-->


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/finger_paint1"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>